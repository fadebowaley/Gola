<!-- views/index.ejs -->
<%- include('layout') %>
<h1>Items</h1>
<ul>
    <% items.forEach(item => { %>
        <li><%= item.name %></li>
    <% }); %>
</ul>

<form action="/add" method="POST">
    <input type="text" name="name" placeholder="Add a new item" required>
    <button type="submit">Add</button>
</form>
